<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/custom_row"
    android:background="@drawable/bggradient"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_antrian"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/a"
                android:text="1"
                android:layout_marginTop="50dp"
                android:textSize="50dp" />

            <LinearLayout
                android:layout_width="186dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:text="Dr Abdul Hafiz"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tx_umur"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:text="Dr. Gizi"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tx_alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:text="Dr. Gizi"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tx_namaDokter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Dr. Gizi" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tx_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="19dp"
            android:padding="15dp"
            android:text="8AM-3PM"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>